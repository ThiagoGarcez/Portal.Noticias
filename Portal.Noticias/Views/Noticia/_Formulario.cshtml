@model Portal.Noticias.Aplicacao.Models.NoticiaModel
@{
    var tags = ViewBag.Tags as List<Portal.Noticias.Aplicacao.Models.TagModel>;
}

<form id="formNoticia" asp-action="Salvar" method="post">
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />

    <div class="form-group mb-3">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control"  required/>
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Texto" class="control-label"></label>
        <textarea asp-for="Texto" class="form-control" rows="5">@Model.Texto</textarea>
        <span asp-validation-for="Texto" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Tags</label><br />
        @foreach (var tag in tags)
        {
            var isChecked = Model?.Tags?.Any(t => t.Id == tag.Id) == true ? "checked" : "";
            <label class="me-2">
                <input type="checkbox" name="tagIds" value="@tag.Id" @isChecked /> @tag.Descricao
            </label>
        }
    </div>

</form>
